<script>
  <% if (success && success.length > 0) { %>
    sessionStorage.setItem('flashMessage', JSON.stringify({
      type: 'success',
      text: <%- JSON.stringify(success[0]) %>
    }));
  <% } else if (error && error.length > 0) { %>
    sessionStorage.setItem('flashMessage', JSON.stringify({
      type: 'error',
      text: <%- JSON.stringify(error[0]) %>
    }));
  <% } %>
</script>
